{
	"name": "ShoutBox",
	"description": "This is the all new ShoutBox extension",
	"version": "1.0",
	"manifest_version":2,
	"omnibox": { "keyword" : "@" },

	"icons": {
		"16":"ShoutBox128.png",
		"48":"ShoutBox128.png",
		"128":"ShoutBox128.png"
		},
		
	"permissions":[
		"notifications",
		"http://www.twitter.com/" 
		],

	"web_accessible_resources": [
		"ShoutBox128.png"
		],
		
	"options_page": "popup.html",

	"background": {
		"persistent": true,
		// "scripts": ["background.js"]
		"page": "background.html"
		},

	"browser_action": {
    	"default_icon": "ShoutBox128.png"
    	// "default_popup": "popup.html"
		}
